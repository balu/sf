void onMarkedFiles(scope void delegate(ViewIndex v) dg)
{
  int m = dataStack.pop!MARK().ifNull(cur);
  int beg, end;
  if (m > cur) {
    beg = cur;
    end = m + 1;
  } else {
    beg = m;
    end = cur + 1;
  }

  foreach (v; beg .. end)
  {
    dg(ViewIndex(v));
  }
}

